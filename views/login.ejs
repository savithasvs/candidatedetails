              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-envelope ml-1"></i></span>
                </div>
                
                <!-- E-Mail Field -->
                <input type="email" name="email" class="form-control" placeholder="Email" required>
              </div>

              <!-- E-Mail Error Block -->
              <div class="email error"></div>
              
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-key ml-1"></i></span>
                </div>
                
                <!-- Password Field -->
                <input type="password" name="password" class="form-control" placeholder="password" required>
              </div>
              
              <!-- Password Error Block -->
              <div class="password error"></div>
              <!-- <div class="row align-items-center remember">
                <input type="checkbox">Remember Me
              </div> -->
              <div class="form-group my-3">
                <!-- Login Button -->
                <input type="Submit" name="Submit" value="Login" class="btn float-right login_btn">
                <!-- <button class="btn  btn-primary " name="Submit" value="Login" type="Submit">Login</button> -->
              </div>
            </form>
        </div>
        <!-- <div class="card-footer my-3">
